
<div class="bg-gray-100 leading-normal tracking-normal">
    <!-- Main Content -->
    <div id="main" class="flex flex-col items-center justify-center min-h-screen bg-gray-100 bg-cover bg-center" style="background-image: url(/images/agno1.jpg);">
        <div class="w-full h-screen flex flex-col items-center justify-center bg-black bg-opacity-50 text-black p-10">
            <div class="bg-white shadow-md rounded-lg p-6 w-full max-w-4xl overflow-y-scroll">
                <div class="flex justify-between items-center mb-4">
                    <h1 class="text-2xl font-bold mb-4">User Profile</h1>
                    <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded mb-2" onclick="showModal('Edit Profile')">Edit Profile</button>
                </div>
                <div class="flex items-center mb-6">
                    <img src="/uploads/{{user.avatar}}" alt="User Profile Picture" class="rounded-full w-32 h-32 object-cover mr-4"> <!-- Avatar -->
                    <div class="w-1/3">
                        <h2 class="text-xl font-semibold">{{user.username}}</h2> <!-- Username -->
                        <p class="text-gray-600">{{user.description}}</p> <!-- Description -->
                        <p class="text-gray-600">Joined on {{user.joinedDate}}</p> <!-- Joined Date -->
                    </div>
                </div>
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-semibold">Review History</h2>
                    <!-- "Write Review" Button -->
                    <div>
                        <a class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" href="/write-review">Write Review</a>
                    </div>
                </div>
                <!-- Reviews -->
                {{#each reviews}}
                <div class="bg-white rounded-lg shadow-lg p-6 mb-4">
                    <div class="flex justify-between items-center mb-2">
                        <h1 class="text-2xl font-semibold mb-2">{{this.establishment}}</h1>
                        <div class="flex space-x-2">
                            <button type="button" class="text-green-500 hover:text-green-600" onclick="showModal('Edit Review')">Edit</button>
                            <button type="button" class="text-red-500 hover:text-red-600" onclick="showModal('Delete Review')">Delete</button>
                        </div>
                    </div>
                    <div class="flex items-center mb-2">
                        {{#times this.rating}}
                        <span class="text-yellow-500"><i class="fa fa-star"></i></span>
                        {{/times}}
                        {{#times (sub 5 this.rating)}}
                        <span class="text-gray-400"><i class="fa fa-star"></i></span>
                        {{/times}}
                    </div>
                    <p class="text-gray-700">{{this.comment}}</p>
                    <p class="text-gray-600 text-sm mt-2 mb-5">Reviewed on {{this.reviewedOn}}</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center space-x-5">
                            <button type="button" class="flex items-center text-green-600">
                                <img src="/images/like.png" class="w-5 h-5 mr-1">
                                <span>{{this.likes}}</span>
                            </button>
                            <button type="button" class="flex items-center text-red-600">
                                <img src="/images/dislike.png" class="w-5 h-5 mr-1">
                                <span>{{this.dislikes}}</span>
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
                <!-- Additional review sections would go here -->
            </div>
        </div>
    </div>

    <!-- Future Modal -->
    <div id="futureModal" class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 flex justify-center items-center hidden">
        <div class="bg-white rounded-lg shadow-md w-full max-w-md p-6">
            <h2 class="text-2xl font-bold mb-4" id="futureModalTitle">To be implemented in the future</h2>
            <button type="button" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded" onclick="closeModal()">Close</button>
        </div>
    </div>

    <!-- Script -->
    <script src="/js/profile.js"></script>
</div>