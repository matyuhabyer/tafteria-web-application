<!-- Main Section -->
<div id="main" class="flex items-center justify-center min-h-screen bg-cover bg-center" style="background-image: url(/images/agno1.jpg);">
    <div class="w-full h-full flex flex-col items-center justify-center bg-black bg-opacity-60 text-center text-white p-12 rounded-2xl shadow-2xl max-w-4xl mt-16 mb-10">
        
        <!-- Main Title -->
        <h1 class="text-5xl md:text-7xl font-extrabold mb-6 text-center drop-shadow-lg">Discover the Best Eateries</h1>
        <!-- Main Subtitle -->
        <p class="text-2xl md:text-3xl font-light mb-10 w-11/12 md:w-8/12 mx-auto text-center">Find the top-rated restaurants, cafes, and stalls in Taft. Read and write reviews, explore establishments, and go to your next foodie experience.</p>
        
        <!-- Main Buttons (Conditional) -->
        <div class="flex flex-col md:flex-row gap-6 justify-center">
            <a class="bg-green-800 w-64 h-12 py-2 px-4 flex items-center justify-center rounded-lg text-white text-xl shadow-md hover:bg-green-700 transition-transform active:scale-95 font-semibold" href="/establishments">Explore Establishments</a>
            
            {{#if user}}
            <!-- Authenticated User Buttons -->
            <a class="bg-yellow-500 w-64 h-12 py-2 px-4 flex items-center justify-center rounded-lg text-white text-xl shadow-md hover:bg-yellow-400 transition-transform active:scale-95 font-semibold" href="/establishments">Write a Review</a>
            {{/if}}
        </div>
    </div>
</div>

<!-- Featured Section -->
<div class="w-full bg-yellow-50 py-16 px-4 flex flex-col items-center">
    <!-- Featured Establishments (Horizontal Scroll) -->
    <div class="w-full max-w-7xl bg-white p-8 shadow-xl rounded-2xl mb-12">
        <h2 class="text-4xl font-bold mb-8 text-center text-gray-800">Featured Establishments</h2>
        <div class="flex flex-row gap-6 overflow-x-auto pb-4">
            {{#each establishments}}
            <div class="min-w-[300px] max-w-xs flex-shrink-0 bg-gray-50 rounded-xl shadow-md overflow-hidden transition-transform hover:-translate-y-1 hover:shadow-lg flex flex-col">
                <img src="{{this.mainImage}}" class="w-full h-48 object-cover rounded-t-xl">
                <div class="p-6 flex flex-col justify-between flex-1">
                    <div class="flex items-center text-sm text-gray-500 mb-2">
                        <span class="text-yellow-400 text-2xl mr-2">&#9733;</span>
                        <span class="mr-1 font-semibold">{{this.rating}}</span>
                        <span>({{this.reviewsCount}} reviews)</span>
                    </div>
                    <h3 class="text-2xl font-bold mb-2 text-gray-800">{{this.name}}</h3>
                    <p class="text-gray-700">{{this.description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    
    <!-- Recent Reviews (Vertical List) -->
    <div class="w-full max-w-7xl bg-white p-8 shadow-xl rounded-2xl">
        <h2 class="text-4xl font-bold mb-8 text-center text-gray-800">Recent Reviews</h2>
        <div class="space-y-6 max-h-[80vh] overflow-y-auto">
            {{#each reviews}}
            <div class="bg-gray-50 rounded-xl shadow-md overflow-hidden transition-transform hover:-translate-y-1 hover:shadow-lg p-6">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center">
                        <img src="/uploads/{{this.user.avatar}}" class="w-14 h-14 rounded-full mr-4 border-2 border-yellow-400">
                        <div>
                            <b class="text-lg text-gray-800">{{this.user.username}}</b>
                            <p class="text-sm text-gray-500">{{this.date}}</p>
                        </div>
                    </div>
                    <div class="flex items-center text-2xl">
                        <span class="text-yellow-400 mr-2">&#9733;</span>
                        <span class="font-semibold text-gray-800">{{this.rating}}</span>
                    </div>
                </div>
                <h4 class="text-xl font-bold mb-2 text-gray-800">{{this.establishment.name}}</h4>
                <p class="text-gray-700 mb-4">{{this.comment}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>
