<!-- Main Section -->
<div id="main" class="flex items-center justify-center h-screen bg-cover bg-center" style="background-image: url(/images/agno1.jpg);">
    <div class="w-full h-full flex flex-col items-center justify-center bg-black bg-opacity-50 text-center text-white p-10">
        <!-- Main Title -->
        <h1 class="text-6xl md:text-8xl font-bold mb-5 text-center">Discover the Best Eateries</h1>
        <!-- Main Subtitle -->
        <p class="text-2xl md:text-4xl font-light mb-10 w-9/12 text-center">Find the top-rated restaurants, cafes, and stalls in Taft. Read and write reviews, explore establishments, and go to your next foodie experience.</p>
        <!-- Main Buttons -->
        <div class="flex flex-col md:flex-row gap-5">
            <a class="bg-green-800 w-64 h-12 py-2 px-4 flex text-center justify-center rounded-lg text-white text-xl shadow-md hover:bg-green-700 transition-transform transform active:translate-y-1" href="/establishments">Explore Establishments</a>
            <a class="bg-yellow-500 w-64 h-12 py-2 px-4 flex text-center justify-center rounded-lg text-white text-xl shadow-md hover:bg-yellow-400 transition-transform transform active:translate-y-1" href="/establishments">Write a Review</a>
        </div>
    </div>
</div>

<!-- Featured Section -->
<div id="main" class="flex flex-col items-center justify-end h-100 bg-yellow-500 p-10">
    <div class="flex flex-col md:flex-row gap-10 mb-20">
        <!-- Featured Establishments -->
        <div class="w-full bg-white p-5 shadow-lg overflow-y-scroll h-screen">
            <h2 class="text-5xl font-bold mb-5 text-center">Featured Establishments</h2>
            <div class="space-y-5">
                {{#each establishments}}
                <div class="flex flex-col bg-white rounded-lg shadow-lg overflow-hidden transition-transform transform hover:-translate-y-1">
                    <img src="{{this.mainImage}}" class="w-full h-64 object-cover">
                    <div class="p-5">
                        <div class="flex items-center text-sm text-gray-500 mb-2">
                            <div class="text-yellow-400 text-2xl mr-2">
                                &#9733
                            </div>
                            <span class="mr-1">{{this.rating}}</span>
                            <span>({{this.reviewsCount}} reviews)</span>
                        </div>
                        <h3 class="text-xl font-bold mb-2">{{this.name}}</h3>
                        <p class="text-gray-700">{{this.description}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <!-- Recent Reviews -->
        <div class="w-full md:w-1/2 bg-white p-5 shadow-lg overflow-y-scroll h-screen">
            <h2 class="text-center text-5xl font-bold mb-5">Recent Reviews</h2>
            <div class="space-y-5">
                {{#each reviews}}
                <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform transform hover:-translate-y-1 p-5">
                    <div class="flex items-center justify-between mb-5">
                        <div class="flex items-center">
                            <img src="/uploads/{{this.user.avatar}}" class="w-12 h-12 rounded-full mr-3">
                            <div>
                                <b class="text-lg">{{this.user.username}}</b>
                                <p class="text-sm mt-0 text-gray-500">{{this.date}}</p>
                            </div>
                        </div>
                        <div class="flex items-center text-xl">
                            <div class="text-yellow-400 text-4xl mr-2">
                                &#9733
                            </div>
                            <span class="mt-1">{{this.rating}}</span>
                        </div>
                    </div>
                    <h4 class="text-xl font-bold mb-2">{{this.establishment.name}}</h4>
                    <p class="text-gray-700 mb-5">{{this.comment}}</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center space-x-5">
                            <button type="button" class="flex items-center text-green-600">
                                <img src="/images/like.png" class="w-5 h-5 mr-1">
                                <span>{{this.likes}}</span>
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>